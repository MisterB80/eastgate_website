---
import { storyblokEditable } from '@storyblok/astro';

const { blok } = Astro.props;
---

<div {...storyblokEditable(blok)} class="bg-white lg:w-96 shadow-lg rounded px-4 py-10">
   <p class="text-gray-600">
      <span class="text-lg font-bold text-tertiary-500">“&nbsp;</span>
      {blok.testimonial}
      <span class="text-lg font-bold text-tertiary-500">&nbsp;”</span>
   </p>
   <div class="flex flex-col justify-between mt-4 ml-2 gap-y-1">
      <span class="text-sm font-semibold text-tertiary-500"> {blok.name}</span>
      <span class="text-xs">
         {blok.role} | <a class="font-semibold hover:text-gray-400" href={blok.link}>{blok.company}</a>
      </span>
   </div>
</div>
