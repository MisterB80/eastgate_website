---
import { storyblokEditable } from '@storyblok/astro';
import Button from '../components/Button.astro';
import SectionHeader from '../components/SectionHeader.astro';

const { blok } = Astro.props;
---

<section {...storyblokEditable(blok)}>
   <div class="py-10 bg-quaternary-50" id="getstarted">
    <SectionHeader heading={blok.heading} subheading={blok.sub_heading} colour="tertiary"/>
      <div class="flex flex-col gap-10 p-8 md:flex-row justify-center">
         {
            blok.items.map((item: any) => {
               return (
                  <div class=" border-2 border-tertiary-300 rounded-xl md:w-1/3 flex flex-col justify-center px-5 py-14">
                     <p class="text-center capitalize font-title text-tertiary-500 text-lg mb-2">{item.title}</p>
                     <p class="text-sm font-body text-left text-gray-600 p-5">{item.subtitle}</p>
                     <div class="flex justify-center">
                        <Button text={item.buttonText} link={item.buttonLink} colour="tertiary" variant="solid" newTab="true" />
                     </div>
                  </div>
               );
            })
         }
      </div>
   </div>
</section>
